<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--Desk-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/cirle_yellow" />

                <!--Zone-->
                <TextView
                    android:id="@+id/txtZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Zone 11"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold" />

                <!--Desk-->
                <TextView
                    android:id="@+id/txtDesk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="11"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold" />


            </RelativeLayout>


            <!--Content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtDetail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 2"
                    android:textSize="@dimen/h2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtDetail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 3"
                    android:textSize="@dimen/h2"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</LinearLayout>